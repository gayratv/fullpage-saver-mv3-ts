{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "WebWorker"
    ],
    "moduleResolution": "Bundler",
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "types": [
      "chrome",
      "node"
    ],
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": [
    "src",
    "./build.mjs",
    "./eslint.config.js"
  ]
}