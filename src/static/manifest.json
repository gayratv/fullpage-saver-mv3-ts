{
  "manifest_version": 3,
  "name": "Full Page Saver (TS, MV3)",
  "version": "1.2.1",
  "description": "Сохраняет всю страницу как JPEG/PNG с автопрокруткой и сшивкой (TypeScript + MV3).",
  "action": {
    "default_title": "Full Page Saver",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "offscreen",
    "debugger"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [ "content/findElement.js" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}